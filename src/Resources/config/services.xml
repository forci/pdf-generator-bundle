<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="forci_pdf_generator.binary">%kernel.root_dir%/../bin/wkhtmltopdf-i386</parameter>
    </parameters>

    <services>

        <service id="Forci\Bundle\PdfGenerator\Generator\PdfGenerator" public="true">
            <argument>%kernel.cache_dir%</argument>
            <argument>%kernel.root_dir%</argument>
            <argument>%forci_pdf_generator.binary%</argument>
            <argument type="service" id="twig"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="router.request_context" on-invalid="null"/>
        </service>
        <service id="forci_pdf_generator.generator" alias="Forci\Bundle\PdfGenerator\Generator\PdfGenerator"/>

    </services>
</container>